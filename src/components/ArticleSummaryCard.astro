---
import Tag from "./Tag.astro";

const { title, tags, slug, description } = Astro.props;
---

<article
  class="border border-indigo-700/30 rounded-3xl p-8 px-16 my-9 hover:border-indigo-700 hover:shadow-indigo-700/20 hover:shadow-md hover:bg-indigo-900/30 shadow-sm shadow-indigo-700/5 transition-all bg-indigo-900/10 hover:ml-4"
>
  <a href={`blog/${slug}`}>
    <div class="flex gap-2">
      {tags.map((tag: string) => <Tag tag={tag} />)}
    </div>
    <h1 class="mt-5 mb-1">{title}</h1>
    <p class="pl-4 max-w-prose">{description}</p>
  </a>
</article>

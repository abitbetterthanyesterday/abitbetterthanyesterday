---
import { getCollection } from "astro:content";
import Tag from "../components/Tag.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
const allPosts = await getCollection("blog");
---

<BaseLayout title="Welcome to Astro.">
  <main
    class="prose mx-auto flex max-w-4xl flex-grow flex-col gap-8 py-8 pt-16 dark:prose-invert md:pt-24 2xl:prose-xl"
  >
    <section
      class="prose-xl:prose-h1:mb-0 not-prose mx-auto border-b-8 border-emerald-600 pb-4 text-center font-display dark:border-amber-500 sm:text-right"
    >
      <span
        class="mb-0 text-5xl font-bold uppercase tracking-wide text-slate-800 shadow-emerald-900/90 dark:text-slate-50 lg:text-8xl"
      >
        A Bit Better Than Yesterday<span
          class="text-emerald-600 dark:text-amber-500">.</span
        >
      </span>
      <span
        class="mb-0 inline-block w-full whitespace-nowrap pr-1 text-xs font-extralight lowercase tracking-wider text-slate-700 dark:text-slate-100 lg:text-base"
      >
        Learning and sharing, one bit at a time
      </span>
    </section>

    <section>
      <br class="leading-tighter max-w-prose" />
      <h2 class="font-bold">
        Welcome <span class="animate-bounce text-5xl">ðŸ‘‹</span>
      </h2>
      <p>
        I am <span
          class="border-b border-emerald-600 font-display font-extrabold tracking-wide dark:border-amber-500"
          >Aloys</span
        >, a developer based in Brisbane, in Australia.
      </p>
      <p>
        <span
          class="border-b border-emerald-600 font-display font-extrabold dark:border-amber-500"
          >A Bit Better Than Yesterday</span
        > is my personal web corner, where I share my thoughts, learning, opinions
        and projects.
      </p>
      <p>
        You might also come across some non-code related stuff, such as my
        passion for outdoors sports. <br />Turns out there is more than coding
        to life!
      </p>
    </section>

    <section class="prose-a:no-underline prose-ul:pl-0">
      <h2>Latest articles</h2>
      <div class="not-prose">
        <ul class="px-0 pl-0">
          {
            allPosts.slice(0, 5).map((post) => (
              <>
                <li
                  class="flex items-center justify-between
               rounded-lg border-emerald-600/30 py-1 px-4 transition hover:bg-slate-200 dark:hover:bg-brand-primary-light"
                >
                  <a href={`blog/${post.slug}`} class="flex-grow px-2 py-4">
                    {post.data.title}

                    <div class="flex gap-2">
                      {post.data.tags.map((tag: string) => (
                        <a href="/tag">
                          <Tag tag={tag} />
                        </a>
                      ))}
                    </div>
                  </a>
                </li>
                <div class="my-px h-px w-full bg-slate-300" />
              </>
            ))
          }
        </ul>
      </div>
      <a
        href="/blog"
        class="align-vertical group mt-6 inline-block justify-self-start rounded-md bg-emerald-900 py-2 px-4 tracking-wide text-emerald-50 no-underline hover:bg-emerald-800"
        >See all the articles published<i
          class="relative bottom-px ml-2 inline transition group-hover:bottom-0 group-hover:animate-bounce"
          data-feather="arrow-right"></i>
      </a>
    </section>
    <section>
      <h2>Projects</h2>
      <p class="text-slate-600">
        I have been quite busy lately, but stay tune I will add some showcases
        of the work I have conducted over the years.
      </p>
    </section>
  </main>
</BaseLayout>

---
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const allPosts = await Astro.glob("../../content/*.(md|mdx)");
  return allPosts.map((post) => ({
    params: { post: post.frontmatter.title.split(" ").join("-").toLowerCase() },
    props: { post },
  }));
}
const {
  Content,
  frontmatter: { title },
} = Astro.props.post;
---

<BaseLayout title={title}>
  <header class="mx-auto max-w-4xl">{title}</header>
  <article class="max-w-4xl mx-auto bg-slate-900 bg-opacity-5 -m-8">
    <Content />
  </article>
</BaseLayout>
